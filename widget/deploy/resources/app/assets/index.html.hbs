<header></header>
<main>
  <div class="wrapper">
    <div style="text-align:center;">
      <label for="wbt-id">ID (1):</label>
      <input id="wbt-id" name="id" type="text" value="1">
      <label for="wbt-quantity">Cantidad (2):</label>
      <input id="wbt-quantity" name="quantity" type="text" value="2">
      <button id="wbt-add-to-cart">Agregar a Carrito</button>
