  <title>Looq</title>
  <script type="text/javascript" src="{{baseUrl}}/winbits.js" data-optimized="yes"></script>
  <script type="text/javascript">
  Winbits.on('initialized', function() {
    console.log('WINBITS WIDGET INITIALIZED');
    Winbits.$(function() {
      Winbits.$('#wbt-add-to-cart').click(function() {
        var $container = Winbits.$(this).parent();
        var id = $container.find('#wbt-id').val();
        id = Winbits.$.isNumeric(id) ? parseInt(id) : 1;
        var quantity = $container.find('#wbt-quantity').val();
        quantity = Winbits.$.isNumeric(quantity) ? parseInt(quantity) : 2;
        var data = { id: id, quantity: quantity };
        console.log(['Calling addToCart with -> ', data])
        Winbits.addToCart(data);
      });
    });
  });
  </script>
