<div class="confirmationContent wbc-propagation-stopper wbc-confirmation-modal">
    <h2 class="wbc-modal-title">{{title}}</h2>
    <div class="confirmation-icon wbc-modal-icon">
        <span class="{{icon}}"></span>
    </div>
    <div class="confirmation-content">
        <p class="wbc-modal-message">{{{message}}}</p>
        <div class="confirmation-submit">
            <input type="button" value="{{cancelValue}}" class="btn btn-cancel wbc-cancel-action">
            <input type="button" value="{{value}}" class="btn wbc-default-action">
        </div>
    </div>
</div>