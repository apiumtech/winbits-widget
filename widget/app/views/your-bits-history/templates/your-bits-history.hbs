<div class="wrapper historical">
    {{#unless transactions}}
    <div>
        <h2>Historial de Bits</h2>
        <div class="accordeonContent">
            <div class="addInfo"><span class="iconFont-close"></span>No tienes movimientos de bits.</div>
        </div>
    </div>
    {{else}}
    <div>
        <h2>Historial de Bits</h2>
        <div class="accordeonContent">
            <div class="accordeonSelectDiv">
                <select class="select" data-clase="selectRegister">
                    <option>Ordenar por...</option>
                    <option>Item 1</option>
                </select>
            </div>
            <div class="dataTable totalBitsTable">
                <table>
                    <thead>
                    <tr>
                        <th>TOTAL</th>
                        <th>BITS</th>
                        <th>FECHA</th>
                        <th>VENCIMIENTO</th>
                        <th>CONCEPTO</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each transactions}}
                        {{#compare @index 0}}
                        <tr class="totalBits">
                            <td rowspan="{{transactionsSize}}">$ {{balance}} Bits</td>
                            <td>${{amount}} </td>
                            <td>{{toDefaultDateFormat dateCreated}}</td>
                            <td>{{toDefaultDateFormat expirationDate}}</td>
                            <td>{{concept}}</td>
                        </tr>
                        {{else}}
                          {{#compare amount 0 operator=">"}}
                             <tr>
                                <td>${{amount}} </td>
                                <td>{{toDefaultDateFormat dateCreated}}</td>
                                <td>{{toDefaultDateFormat expirationDate}}</td>
                                <td>{{concept}}</td>
                              </tr>
                          {{else}}
                              <tr>
                                  <td class="minusBits">- ${{abs amount}} </td>
                                  <td>{{toDefaultDateFormat dateCreated}}</td>
                                  <td>-</td>
                                  <td>{{concept}}</td>
                              </tr>
                          {{/compare}}
                        {{/compare}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="dataTable-pager">
            <p>PÃ¡gina 1 de 14</p>
            <ul>
                <li class="pager-prev"><a href="#"><span class="iconFont-arrowLeft"></span> Ant</a></li>
                <li><a href="">1</a></li>
                <li><a href="#">2</a></li>
                <li class="pager-current">3</li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>...</li>
                <li><a href="#">10</a></li>
                <li><a href="#">11</a></li>
                <li><a href="#">12</a></li>
                <li><a href="#">13</a></li>
                <li><a href="#">14</a></li>
                <li class="pager-next"><a href="#">Sig <span class="iconFont-arrowRight"></span></a></li>
            </ul>
        </div>
    </div>
    {{/unless}}
    <input id="wbi-your-bits-history-btn-back" type="submit" value="Back to site" class="btn btnBackToSite">
</div>