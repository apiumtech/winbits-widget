<form id="wbi-login-form" accept-charset="utf-8" action="#" method="post">
    <div class="mainModal login loginForm">
        <div class="contentModal">
            <fieldset>
              {{#withCurrentVertical}}
                <h1>Bienvenido a <span class="iconVertical-r vertical{{id}}" title="{{name}}"></span> <small>un sitio de la familia <span class="icon winbits11px">winbits</span></small></h1>
              {{/withCurrentVertical}}
                <a href="#" id="wbi-login-facebook-link" class="loginFacebook"><span class="iconFont-facebook"></span>Login con Facebook</a>
                <span class="login-or">ó</span>
                <input type="text" placeholder="Email" name="email">
                <input type="password" placeholder="Password" name="password">
                <span class="checkbox-span checkbox-unchecked"></span>
                <input type="checkbox" class="checkbox" name="rememberMe" value="rememberMe">
                <label class="checkboxLabel">Recuérdame</label>
                <div class="errorDiv" style="display:none;"><p></p></div>
                <input id="wbi-login-in-btn" type="submit" class="btn" value="Log in">
                <p id="wbi-recover-password"class="forgotRegister">¿Olvidaste tu password? <a href="#wb-recover-password">haz click aquí</a></p>
                <p class="forgotRegister">¿No estas registrado? <a href="#wb-register">haz click aquí</a></p>
            </fieldset>
        </div>
    </div>
</form>
