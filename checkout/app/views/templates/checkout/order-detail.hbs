<ul>
  {{#each orderDetails}}
  <li class="order-detail-{{sku.id}}">
    <a href="#"><img src="{{defaultThumbnail sku.thumbnail}}" width="28" height="36" alt="{{sku.name}}"></a>
    <p>{{sku.name}}
      <span>({{quantity}}) {{{joinAttributes sku.mainAttribute sku.attributes}}}</span>
      <span style="font-weight: bold">{{formatCurrency amount}}</span>
    </p>
  </li>
  {{/each}}
</ul>
<div class="checkoutSubtotal">
  <span>PRECIO ORIGINAL</span>
  <span>{{formatCurrency orderFullPrice}}</span>
  <span>SUBTOTAL</span>
  <span>{{formatCurrency itemsTotal}}</span>
  <span>ENVIO</span>
  <span>${{shippingTotal}}</span>
  <span>GANAS</span>
  <span><span class="icon winbits10px"></span>{{cashback}}</span>
  <span class="bits-payment-data" style="display: none;">PAGO EN BITS</span>
  <span class="bits-payment-data bits-amount" style="display: none;"><span class="icon winbits10px"></span></span>
</div>
{{#hasBitsBalanceInCheckout}}
<input type="text" value="{{bitsTotal}}" data-min="0" data-max="{{total}}" data-step="1" class="slideInput" id="wbi-bits-slide-checkout"
       data-max-selection="{{maxBits}}">
<span class="legendCarrito">Usa tus Winbits como dinero en esta compra</span>
{{/hasBitsBalanceInCheckout}}
<div class="checkoutTotal">
  <span class="checkoutTitle">TOTAL</span>
  <span class="checkoutDetail"><p style="display: inline;" class="wb-order-cash-total">{{formatCurrency cashTotal}}</p>
    <span class="note">Ahorro de <p style="display: inline;" class="wb-order-saving">{{formatCurrency orderSaving}}</p></span></span>
</div>
