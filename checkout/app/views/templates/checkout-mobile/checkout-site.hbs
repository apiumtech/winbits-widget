<main class="widgetWinbitsMain checkout-container">
    <div class="wrapper checkoutWinbits" >
        <div class="checkoutMain" id="checkoutMainContainer" style="display: none;">

            <ul class="step">
                <li class="active">
                    <span class="circle">1</span>
                    <span class="description">ENVIO</span>
                </li>
                <li >
                    <span class="circle">2</span>
                    <span class="description">PAGO</span>
                </li>
                <li>
                    <span class="circle">3</span>
                    <span class="description">RESUMEN</span>
                </li>
            </ul>

            <div class="checkoutShipping">
                <div class="shippingAddressesContainer"></div>
            </div>
            <div class="checkoutPayment">
                <div class="checkoutPaymentContainer chk-step" id="wbi-checkout-payment-container"></div>
            </div>
            <div class="checkoutSummary">
                <div class="checkoutSummaryContainer chk-step"></div>
            </div>
        </div>
        <aside id="order-detail">
            <h2>TU ORDEN
                <span class="timeCheckout"></span>
            </h2>
            <div style="text-align: center; margin: 20px 0;">
                <a href="/">Continua comprando</a>
            </div>
            <div style="text-align: center; margin: 20px 0;">
                <a id="btnStartPaymentProcess" class="btn btnCheckout" style="width: calc(100% - 120px)">INICIA EL PROCESO DE PAGO</a>
            </div>
        </aside>
    </div>
