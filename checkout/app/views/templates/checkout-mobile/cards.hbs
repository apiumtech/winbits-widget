<div class="creditcards wb-cards-subview" id="wbi-cards-list-holder">
  <ul>
    {{#each cards}}
    <li class="creditcardItem  wb-card-list-item {{paymentMethodSupportedClass ../methods cardInfo.cardData.cardType}} {{getCardTypeClass cardInfo.cardData.cardType}} {{#if cardInfo.cardPrincipal}}creditcardSelected{{/if}}" data-notelegible="Lo sentimos. Esta compra acepta únicamente pago en efectivo o winbits.">
      {{paymentMethodSupportedDiv ../methods cardInfo.cardData.cardType}}
      <div class="creditcardMenu">
        <a class="wb-edit-card-link" href="#">editar</a>
        <span class="icon closeButton wb-delete-card-link">cerrar</span>
      </div>
      <h3>Tarjeta {{getIndex @index}}</h3>
      <address>
        {{#with cardInfo.cardData}}
        <span>{{cardType}},</span>
        <span>{{accountNumber}}</span>
        <span>{{expirationMonth}}/{{expirationYear}}</span>
        {{/with}}
      </address>
      <span class="note send creditCardSend">Tu orden se pagará con esta tarjeta.</span>
      <span class="note hover">{{../cardItemLegend}}</span>
      {{hasMSI cardInfo.supportInstallments ../methods cardInfo.cardData.cardType}}
      <input type="radio" name="winbitsCCRadio" class="creditcardRadio" id="winbitsCCRadio1">
      {{!<input type="radio" name="winbitsCCRadio" class="creditcardRadio" id="winbitsCCRadio" checked="checked">}}
    </li>
    {{/each}}
    <li class="creditcardAdd">
      <h3>AGREGAR TARJETA +</h3>
      <span id="wbi-add-new-card-link">Da clic para agregar</span>
    </li>
  </ul>
</div>

<div class="newCreditCard creditcardNew wb-cards-subview" id="wbi-new-card-div">
    <form id="wbi-new-card-form" accept-charset="utf-8" action="#" method="post" class="wb-card-form">
        <fieldset>
            <div class="form-group">
                <h3>NOMBRE</h3>
            </div>

            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="required" maxlength="30" name="firstName" id="wbi-new-card-firstName">
            </div>

            <div class="form-group">
                <label>Apellido(s)</label>
                <input type="text" class="required" maxlength="50" name="lastName" id="wbi-new-card-lastName">
            </div>
            <div class="form-group wb-card-number-panel">
                <label>Número de Tarjeta</label>
                <input type="text" class="required wb-card-number-input" maxlength="16" name="accountNumber">
                <span class="wb-card-logo icon"></span>
            </div>
            <div class="form-group">
                <label>Fecha de vencimiento</label>
                <input type="text" class="required digits" placeholder="mm" maxlength="2" name="expirationMonth" id="expirationMonth" style="width:50px;">
                <input type="text" class="required digits" placeholder="aa" maxlength="2" name="expirationYear" id="expirationYear" style="width:50px;">
            </div>

            <div class="form-group">
                <h3>DIRECCIÓN</h3>
            </div>
            <div class="form-group">
                <label>Calle</label>
                <input type="text" class="required" name="street1" id="wbi-new-card-street">
            </div>
            <div class="form-group">
                <label>Número</label>
                <input type="text" class="inputMedium required" maxlength="50" name="number" style="display:block;" id="wbi-new-card-number">
            </div>
            <div class="form-group">
                <label>Teléfono</label>
                <input type="text" class="required" name="phoneNumber" maxlength="15" id="wbi-new-card-phoneNumber">
            </div>
            <div class="form-group">
                <label>Codigo Postal</label>
                <input type="text" class="required" name="postalCode" maxlength="5" id="wbi-new-card-postalCode">
            </div>
            <div class="form-group">
                <label>Ciudad</label>
                <input type="text" class="required" name="city" maxlength="40" id="wbi-new-card-city">
            </div>
            <div class="form-group">
                <label>Estado</label>
                <input type="text" class="required" name="state" maxlength="40" id="wbi-new-card-state">
            </div>

            <input type="hidden" class="required" name="country" value="MX">

            <div class="form-group">
                <h3>OPCIONES</h3>
            </div>

            <input type="checkbox" class="checkbox" name="cardPrincipal" id="cardPrincipalNew">
            <label for="cardPrincipalNew" class="checkboxLabel">Hacer esta mi tarjeta principal</label>
            <br/>
            <input type="checkbox" class="checkbox" name="copyAddress" id="wbi-copy-address" value="false">
            <label class="checkboxLabel">Utilizar mi dirección principal de envío</label>
            <p class="note">Winbits puede guardar tus tarjetas de credito por ti, para que tu proxima compra sea mucho más rápida.</p>
            <!--<div class="errorDiv"><p></p></div>-->
            <div class="submitButton">
                <span class="btn btnCancel btnPaymentCancel wb-cancel-card-form-btn" id="wbi-cancel-payment-btn">Cancelar</span>
                <input type="submit" value="Guardar" class="btn submitCheckoutPaymentNewCard wb-submit-trigger" id="wbi-save-card-form-btn">
            </div>
        </fieldset>
    </form>
</div>
<div class="newCreditCard creditcardNew wb-cards-subview">
    <form id="wbi-edit-card-form" accept-charset="utf-8" action="#" method="post" class="wb-card-form">
        <fieldset>
            <div class="form-group">
                <h3>NOMBRE</h3>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="required" maxlength="30" name="firstName" disabled="disabled">
            </div>
            <div class="form-group">
                <label>Apellido(s)</label>
                <input type="text" class="required" maxlength="50" name="lastName" disabled="disabled">
            </div>
            <div class="form-group wb-card-number-panel">
                <label>Número de Tarjeta</label>
                <input type="text" class="required wb-card-number-input" maxlength="16" name="accountNumber" disabled="disabled">
                <span class="wb-card-logo icon"></span>
            </div>
            <div class="form-group">
                <label>Fecha de vencimiento</label>
                <input type="text" class="required digits" placeholder="mm" maxlength="2" name="expirationMonth" disabled="disabled">
                <input type="text" class="required digits" placeholder="aa" maxlength="2" name="expirationYear" disabled="disabled">
            </div>

            <div class="form-group">
                <h3>DIRECCIÓN</h3>
            </div>
            <div class="form-group">
                <label>Calle</label>
                <input type="text" class="required" name="street1">
            </div>
            <div class="form-group">
                <label>Número</label>
                <input type="text" class="inputMedium required" maxlength="50" name="number" style="display:block;">
            </div>
            <div class="form-group">
                <label>Teléfono</label>
                <input type="text" class="required digits" name="phoneNumber" minlength="10" maxlength="15">
            </div>
            <div class="form-group">
                <label>Codigo Postal</label>
                <input type="text" class="required" name="postalCode" maxlength="5">
            </div>
            <div class="form-group">
                <label>Ciudad</label>
                <input type="text" class="required" name="city" maxlength="40">
            </div>
            <div class="form-group">
