<form id="wbi-edit-shipping-address-form" class="shippingEditAddress" data-id={{id}}>
    <fieldset>
        <h3>CONTACTO</h3>

        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="required" name="firstName" value="{{firstName}}"  id="winbitsShippingName" maxlength="30">
        </div>

        <div class="form-group">
            <label>Apellido paterno</label>
            <input type="text" class="required" name="lastName" value="{{lastName}}"  id="winbitsShippingLastname" maxlength="50">
        </div>

        <div class="form-group">
            <label>Apellido materno</label>
            <input type="text" name="lastName2" value="{{lastName2}}"  id="winbitsShippingLastname2" maxlength="50">
        </div>

        <div class="form-group">
            <label>Teléfono a 10 dígitos</label>
            <input type="text" name="phone" id="winbitsShippingTel" value="{{phone}}" maxlength="15">
        </div>

        <div class="form-group">
            <h3>DIRECCIÓN</h3>
        </div>

        <div class="form-group">
            <label>Calle</label>
            <textarea class="required" name="street" maxlength="75">{{street}}</textarea>
        </div>

        <div class="two-columns">
            <div class="form-group">
                <label># ext</label>
                <input type="text" class="required" name="externalNumber" value="{{externalNumber}}" maxlength="5">
            </div>
            <div class="form-group">
                <label># int</label>
                <input type="text" name="internalNumber" value="{{internalNumber}}" maxlength="5">
            </div>
        </div>

        <div class="form-group">
            <label>¿Entre qué calles?/Referencias para llegar</label>
            <textarea class="required" name="indications">{{indications}}</textarea>
        </div>

        <div class="form-group">
            <label>Codigo Postal</label>
            <input type="text" name="zipCode" class="required" data-requiredfield="Codigo Postal Requerido" maxlength="5" value={{zipCode}}>
        </div>

        <div class="form-group">
            <label>Estado</label>
            <input type="text" name="state" class="required" data-requiredfield="Requerido"  readonly="readonly" value={{state}}>
        </div>

        <div class="form-group">
            <label>Delegación o Municipio</label>
            <input type="text" name="county" class="required" data-requiredfield="Requerido" readonly="readonly" value={{city}}>
            <select id="wbi-shipping-address-zip-code-info" name="zipCodeInfo" class="select required" data-requiredfield="Requerido" data-clase="selectRegister" value="{{#if zipCodeInfo}}{{zipCodeInfo.id}}{{/if}}"  {{#if location}}data-location="{{location}}"{{/if}}></select>
        </div>

        <div class="form-group">
            <h3>OPCIONES</h3>
        </div>

        <input type="checkbox" class="checkbox" {{#if main}}checked="checked"{{/if}} name="main" id="winbitsShippingPrincipal">
        <label for="winbitsShippingPrincipal" class="checkboxLabel">Hacer esta mi dirección principal</label>
        <p class="note">Winbits guardará tu dirección para que en tu próxima visita tus compras sean más faciles de realizar.</p>
        <div id="wbi-edit-shipping-address-error" class="errorDiv" style="display: none"><p></p></div>
        <div class="submitButton">
            <span id="wbi-add-shipping-address-cancel-btn" class="btn btnCancel">Cancelar</span>
            <input class="btn btnUpdate" id="wbi-edit-shipping-address-submit-btn" type="button" value="Continuar">
        </div>
    </fieldset>
</form>
