<h2>MI PERFIL</h2>
<div class="miPerfil">
  <h3 class="profile-full-name">{{name}} {{lastName}}</h3>
  <p><a id="wbi-profile-email" class="profile-email" href="mailto:{{getProfileEmail}}">{{getProfileEmail}}</a></p>
  <p class="profile-age"></p>
  <address>
    {{#if location}}
      <span class="profile-location">Col. {{location}}</span>
    {{/if}}
    {{#if zipCode}}
      <span class="profile-zip-code">C.P. {{zipCode}}</span>
    {{/if}}
    {{#if phone}}
      <span class="profile-phone">tel. {{phone}}</span>
    {{/if}}
  </address>
  <ul>
    <li><a href="#" id="wbi-change-password-link" class="changePassBtn"><span class="icon changePasword"></span>Cambiar Password</a></li>
    <li><a href="#" id="wbi-show-cards-manager-link"><span class="icon creditCard"></span>Editar Tarjetas de Crédito </a></li>
    <li><a href="#" id="attachFacebookAccount{{facebook}}"><span class="icon facebookCircle"></span> <span class="socialProvider{{facebook}}">{{getSocialActionByState facebook}} tu cuenta de Facebook </span></a></li>
    <li><a href="#" id="attachTwitterAccount{{twitter}}"><span class="icon twitterCircle"></span> <span class="socialProvider{{twitter}}">{{getSocialActionByState twitter}} tu cuenta de Twitter </span></a></li>
  </ul>
  <input class="btn editBtn" id="editBtnProfile" value="Editar">
</div>
<div id='attach-facebook-account-modal' class="modal hide">
        <div class="modal-body reset-modal" id="attach-facebook-account-modal-body" style="padding:0px"></div>
</div>
<div id='attach-twitter-account-modal' class="modal hide">
        <div class="modal-body reset-modal" id="attach-twitter-account-modal-body" style="padding:0px"></div>
</div>
<div class="editMiPerfil">
  <form id="wbi-update-profile-form">
  <fieldset>
    <input type="text" placeholder="Nombre" class="required" name="name" maxlength="75" value="{{name}}">
    <input type="text" placeholder="Apellido" class="required" name="lastName" maxlength="75" value="{{lastName}}">
    <!--<input type="text" placeholder="Correo Electrónico" value="rulas@hotmail" email="true">-->
    <div class="fieldsetDiv divBirthday">
      <label>Cumpleaños</label>
      <input type="text" placeholder="dd" maxlength="2" name="day-input" value="{{substr birthdate start=8 length=2}}">
      <input type="text" placeholder="mm" maxlength="2" name="month-input" value="{{substr birthdate start=5 length=2}}">
      <input type="text" placeholder="aa" maxlength="2" name="year-input" value="{{substr birthdate start=2 length=2}}">
      <input type="hidden" name="birthdate" value="{{birthdate}}">
    </div>
    <div class="fieldsetDiv divGender">
      <label>Género</label>
      <input type="radio" name="gender" value="H" class="male">
      <input type="radio" name="gender" value="M" class="female">
    </div>
    <input type="text" placeholder="Código Postal" id="zipCode" maxlength="5" required name="zipCode" class="zipCode" value="{{zipCode}}">
    <input type="hidden" name="zipCodeInfoExtra" class="zipCodeInfoExtra" value="{{location}}">
    <select class="select" data-clase="selectRegister" data-inputselect="true" name="localidad" id="wbi-profile-zip-code-info">
      <option>Localidad</option>
    </select>
    <input type="text" placeholder="Teléfono" name="phone" maxlength="10" value="{{phone}}">
    <div class="errorDiv"><p></p></div>
    <input id="updateBtnProfile" type="button" class="btn editBtn" value="Guardar">
    <a href="#" class="linkBack">Regresar</a>
  </fieldset>
  </form>
</div>
<div class="changePassDiv">
  <form id="wbi-change-password-form">
  <fieldset>
    <input type="password" placeholder="Password Actual" class="required reseteable" name="password" maxlength="30">
    <input type="password" placeholder="Nuevo Password" class="required reseteable" name="newPassword" maxlength="30">
    <input type="password" placeholder="Confirmar Nuevo Password" class="required reseteable" name="passwordConfirm" maxlength="30">
    <div class="errors"></div>
    <input type="submit" class="btn editBtn" value="Guardar">
    <a href="#" class="linkBack">Regresar</a>
  </fieldset>
  </form>
</div>
