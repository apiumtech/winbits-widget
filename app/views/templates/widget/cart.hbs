<span class="icon triangle2"></span>
<div class="wrapper">
  <div class="carContenido">
    <div class="carritoDivLeft" style="width: 339px;">
      <div class="carritoContainer scrollPanel" data-content="carritoContent">
        <div class="carritoContent">
          <ul class="cart-details-list reseteable" id="detail-cart" data-reset-unload="">
            {{#each cartDetails}}
              {{> cartDetail}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="carritoDivRight cart-info">
      <h3>ENVIO</h3>
      <span class="freeShipping cart-shipping-total reseteable" data-reset-text="GRATIS">
        {{cartShipping total shippingTotal bitsTotal}}
      </span>

      <h3>TOTAL</h3>
      <span class="totalCar cart-total reseteable" data-reset-text="$0">${{cartTotal total bitsTotal}}</span>

      <div class="winSave wb-bits-control">
        <span>WIN</span>
        <em class="icon winbits10px"></em>
        <label class="cart-bits-total reseteable" data-reset-text="0">0</label>
        <span>save</span>
        <label class="cart-saving reseteable" data-reset-text="0%">{{cartSaving total bitsTotal}}%</label>
      </div>
      <input id="wb-cart-bits-slider reseteable" data-reset-val="0" type="text" value="{{bitsTotal}}" data-min="0"
             data-max="{{maxBits}}" data-step="1" class="slideInput wb-bits-control">
      <span class="legendCarrito">Usa tus bits como dinero en esta compra <a href="#">learn more</a></span>
      <a href="#" class="continueShoping">CONTINUE SHOPING</a>
      <input type="submit" class="btn" value="Check Out">
      <div class="condicionesCompra">
        <p>Aplica para esta compra:</p>
        <p>
          <span class="icon paypalCC">Pay Pal</span>
          <span class="icon oxxoCC">OXXO</span>
          <span class="icon depositoCC">Dep√≥sito Bancario</span>
        </p>
        <p>Meses sin intereses con:</p>
        <p>
          <span class="icon mastercardCC">Master Card</span>
          <span class="icon visaCC">VISA</span>
          <span class="icon amexCC">American Express</span>
          <span class="icon paypalCC">Pay Pal</span>
        </p>
      </div>
    </div>
  </div>
</div>
